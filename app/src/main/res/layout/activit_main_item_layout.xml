<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:backgroundTint="#fff"
    android:elevation="3dp"
    card_view:cardCornerRadius="20dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storyimage"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#12111111"
            android:backgroundTint="#fff"
            android:src="@drawable/story_four" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_subscribe"
            android:backgroundTint="#F5F5F5"
            android:text="انتبهي يا جود"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/channelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_alignRight="@id/channelimage"
                android:layout_marginTop="6dp"
                android:text="غيداءالعجاجي"
                android:textSize="13dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/channelimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_color="#111"
                app:civ_border_width="0dp"
                app:civ_shadow="false"
                app:civ_shadow_color="#111"
                app:civ_shadow_radius="0"
                app:src="@drawable/animal_elp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/soundimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:tint="#EBEBEB"/>

            <TextView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="7dp"
                android:layout_alignRight="@id/soundimage"
                android:text="12ألف"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rating"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignRight="@id/views"
                android:layout_marginRight="36dp"
               android:src="@drawable/starss"
                android:tint="#FFE600"/>


        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
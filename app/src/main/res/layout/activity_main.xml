<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/real"
        android:layout_height="59dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/channelimage"
            android:layout_width="44dp"
            android:layout_height="44dp"
android:layout_alignParentLeft="true"

            android:layout_margin="2dp"
            android:src="@drawable/animal_elp"
            app:civ_border_width="7dp"

            />
    </RelativeLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:backgroundTint="#eee"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"


        >


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFEB3B"
            android:fitsSystemWindows="true"
            android:outlineAmbientShadowColor="@color/lightBlue"
            android:outlineSpotShadowColor="@color/darkBlue"
            app:contentScrim="#fff"
            app:elevation="0dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">



            <ImageView
                android:id="@+id/bird"
                android:layout_width="92dp"
                android:layout_height="75dp"
                android:layout_gravity="right"
                android:layout_marginTop="75dp"
                android:src="@drawable/bird_two" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="90dp">

                <ImageView
                    android:id="@+id/music1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/mu_one"
                    android:tint="@color/lightOrange"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/music2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/mu_two"
                    android:tint="@color/basicblue"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/music3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleX="-1"
                    android:src="@drawable/mu_one"
                    android:tint="@color/darkOrange"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textapp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="حكواتي"
                    android:textColor="@color/lightBlue"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>





            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="#FFEB3B"
                android:gravity="center"
                android:padding="30dp"
                app:contentScrim="?attr/colorPrimary"
                app:elevation="6dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="الملف الشخصي"
                app:titleTextColor="#fff"
                />





        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-11dp"
        android:background="@drawable/shape_subscribe"
        android:backgroundTint="#fff"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="401dp"
            android:layout_height="599dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <include
        layout="@layout/main_bottom_navigation_view"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>

